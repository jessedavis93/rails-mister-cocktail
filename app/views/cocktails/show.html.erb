
<div class="drink-header">
  <h1 class="cocktail-name"><%= @cocktail.name %><%= image_tag('cocktail.png', size: '60x60') %></h1>
</div>

<div class="button-bar">
  <div class="main-button">
    <%= link_to image_tag('house.png', size: '40x40'), cocktails_path %>
  </div>

    <%= link_to dose_new_path(@cocktail) do %>
      <div class="main-button">
        <i class="fas fa-plus"></i>
      </div>
    <% end %>
</div>


<div class="drink-body">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-4"><% @cocktail.doses.each do |dose| %>
          <p> - <%= dose.description %> : <%= dose.ingredient.name %>   <%= link_to image_tag('delete.png', class: 'trash'), dose_delete_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %><p>

        <% end %>
      </div>
    </div>
  </div>
</div>




